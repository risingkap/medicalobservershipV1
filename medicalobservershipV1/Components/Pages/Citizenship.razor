@page "/citizenship"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Citizenship - Medical Observership</PageTitle>

<div class="header-text">
    <h1>Citizenship Details</h1>
    <p>Please provide your citizenship and passport information.</p>
</div>

<div class="form-card">
    <div class="form-row">
        <div class="form-group">
            <label>Country of Citizenship</label>
            <input type="text" placeholder="Enter your country." @bind="country" />
        </div>
        <div class="form-group">
            <label>Passport Number</label>
            <input type="text" placeholder="Enter passport number." @bind="passportNumber" />
        </div>
    </div>
    
    <div class="next-btn-container" style="justify-content: space-between;">
        <button class="next-btn" style="background: #6c757d;" @onclick='() => NavigationManager.NavigateTo("specialty")'>
            <i class="fa-solid fa-chevron-left"></i> Back
        </button>
        <button class="next-btn" @onclick='() => NavigationManager.NavigateTo("documents")'>
            Next <i class="fa-solid fa-chevron-right"></i>
        </button>
    </div>
</div>

@code {
    private string country = "";
    private string passportNumber = "";
}
